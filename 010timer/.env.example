### .env.example
# Timer Configuration
TIMER_DEFAULT_SOUND=true
TIMER_DEFAULT_DESKTOP_NOTIFICATIONS=true
TIMER_CONFIG_PATH=~/.timer.yaml

# Sound Settings
TIMER_SOUND_FILE=/usr/share/sounds/alarm.wav
TIMER_SOUND_VOLUME=80

# Display Settings
TIMER_SHOW_MILLISECONDS=false
TIMER_COLOR_SCHEME=default
TIMER_ANIMATION=true

# Development Settings
TIMER_DEBUG=false
TIMER_LOG_LEVEL=info